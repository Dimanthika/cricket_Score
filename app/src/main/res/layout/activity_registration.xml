<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E44E616C"
    tools:context=".PlayerRegister">

    <ImageView
        android:id="@+id/PImage"
        android:layout_width="161dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        tools:srcCompat="@drawable/player" />
    <EditText
        android:id="@+id/txtAge"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="age"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <EditText
        android:id="@+id/txtregno"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Player ID"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <EditText
        android:id="@+id/txtpname"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Player Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/txtAdd"
        android:layout_width="410dp"
        android:layout_height="43dp"
        android:background="#047CA5"
        android:gravity="center"
        android:text="Add Player Record"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txttotscore"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_marginTop="319dp"
        android:layout_marginBottom="382dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Total Score"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txttotovers"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_marginTop="371dp"
        android:layout_marginBottom="330dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Overs"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txttotCenturies"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_marginTop="424dp"
        android:layout_marginBottom="277dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Centuries"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtTotHlfcen"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_marginTop="484dp"
        android:layout_marginBottom="217dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Half Centuries"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txttotWickets"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_marginTop="545dp"
        android:layout_marginBottom="156dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="Wickets"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_marginTop="617dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="#21BBEA"
        android:text="SUBMIT"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA19376A"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385">

        <RadioButton
            android:id="@+id/rBat"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Batsman"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rBall"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Bowller"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rAllround"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="AllRounder"
            android:textColor="@color/white" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>